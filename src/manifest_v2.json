{
  "manifest_version": 2,
  "name": "Garmin Workout Stats",
  "description": "View workout data and statistics from the Garmin Connect console.",
  "version": "1.0.0",
  "homepage_url": "https://github.com/gergo225/garmin-workout-stats",
  "icons": {
    "48": "icons/icon-dumbbell.svg"
  },

  "permissions": [
    "activeTab",
    "webRequest",
    "storage",
    "*://connect.garmin.com/*"
  ],

  "background": {
    "scripts": ["workout_bg.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon-dumbbell.svg",
    "theme_icons": [
      {
        "light": "icons/icon-dumbbell.svg",
        "dark": "icons/icon-dumbbell.svg",
        "size": 32
      }
    ],
    "default_title": "Garmin Workout Stats",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://connect.garmin.com/*"],
      "js": ["workout_cs.js"]
    }
  ]
}
